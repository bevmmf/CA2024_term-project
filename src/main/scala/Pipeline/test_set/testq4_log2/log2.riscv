# Takes input N (a0), returns its log base 2 in a0
.text
.globl _start
_start:
    
main:
    li sp,0x50
    li a0,8    
    jal logint
spin:
    beq x0,x0,spin
        
logint:
    addi sp, sp, -4
    sw t0, 0(sp)
    add t0,a0,zero        # k = N
    add a0, zero, zero    # i = 0

logloop:
    beq t0, zero, logloop_end # Exit if k == 0
    srai t0, t0, 1 # k >>= 1
    addi a0, a0, 1 # i++
    j logloop

logloop_end:
    addi a0, a0, -1 # Return i - 1
    lw t0, 0(sp)
    addi sp, sp, 4
    jalr x0,ra,0